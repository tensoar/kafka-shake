{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/main/**/*",
        "src/preload/**/*",
        "src/shared/**/*"
    ],
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "electron-vite/node"
        ],
        "paths": {
            "@shared/*": ["./src/shared/*"],
            "@main/*": ["./src/main/*"]
        }
    }
}
